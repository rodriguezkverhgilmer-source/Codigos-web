  <!-- ===== Viewer principal ===== -->
  <slider-component id="GalleryViewer-{{ section.id }}" class="slider-mobile-gutter" style="position:relative">
    <!-- Flechas superpuestas -->
    <style>
      #GalleryViewer-{{ section.id }}{ position:relative; z-index:1; }
      #GalleryViewer-{{ section.id }} .slider-buttons{ display:block !important; z-index:21; }

      #GalleryViewer-{{ section.id }} .slider-button{
        position:absolute; top:50%; transform:translateY(-50%);
        z-index:22; width:44px; height:44px; border-radius:9999px;
        background:rgba(0,0,0,.45); color:#fff; border:0;
        display:inline-flex; align-items:center; justify-content:center;
        cursor:pointer; opacity:0; transition:opacity .2s, background .2s; backdrop-filter:blur(2px);
      }
      #GalleryViewer-{{ section.id }} .slider-button--prev{ left:12px; }
      #GalleryViewer-{{ section.id }} .slider-button--next{ right:12px; }

      /* El asset icon-caret apunta hacia ABAJO → rotamos el SVG para ← / → */
      #GalleryViewer-{{ section.id }} .slider-button .svg-wrapper svg{ width:18px; height:18px; display:block; }
      #GalleryViewer-{{ section.id }} .slider-button--prev .svg-wrapper svg{ transform:rotate(90deg); }   /* ← */
      #GalleryViewer-{{ section.id }} .slider-button--next .svg-wrapper svg{ transform:rotate(-90deg); } /* → */

      /* Mostrar flechas solo al hover (desktop) */
      #GalleryViewer-{{ section.id }}:hover .slider-button{ opacity:1; }
      #GalleryViewer-{{ section.id }} .slider-button:hover,
      #GalleryViewer-{{ section.id }} .slider-button:focus-visible{ background:rgba(0,0,0,.65); outline:none; }

      /* Ocultar cuando están disabled (extremos) */
      #GalleryViewer-{{ section.id }} .slider-button[disabled]{ opacity:0 !important; pointer-events:none !important; }

      /* En móvil (sin hover), visibles */
      @media (hover:none){ #GalleryViewer-{{ section.id }} .slider-button{ opacity:1; } }

      /* (Opcional) Ocultar contador en desktop */
      @media (min-width:750px){ #GalleryViewer-{{ section.id }} .slider-counter{ display:none !important; } }
    </style>

    <a class="skip-to-content-link button visually-hidden quick-add-hidden" href="#ProductInfo-{{ section.id }}">
      {{ 'accessibility.skip_to_product_info' | t }}
    </a>

    <ul
      id="Slider-Gallery-{{ section.id }}"
      class="product__media-list contains-media grid grid--peek list-unstyled slider slider--mobile slider--tablet-up"
      role="list"
    >
      {%- if product.selected_or_first_available_variant.featured_media != null -%}
        {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
        <li
          id="Slide-{{ section.id }}-{{ featured_media.id }}"
          class="product__media-item grid__item slider__slide is-active
          {% if single_media_visible %} product__media-item--single{% endif %}
          {% if featured_media.media_type != 'image' %} product__media-item--full{% endif %}
          {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
          data-media-id="{{ section.id }}-{{ featured_media.id }}"
        >
          {%- assign media_position = 1 -%}

          {% render 'product-thumbnail',
            media: featured_media,
            media_count: media_count,
            position: media_position,
            desktop_layout: section.settings.gallery_layout,
            mobile_layout: section.settings.mobile_thumbnails,
            loop: section.settings.enable_video_looping,
            modal_id: section.id,
            xr_button: true,
            media_width: media_width,
            media_fit: section.settings.media_fit,
            constrain_to_viewport: section.settings.constrain_to_viewport,
            lazy_load: false
          %}

          {% if featured_media.media_type == 'image' %}
            <div class="mg-badge--warranty">
              <svg class="ico" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 2 3 6.5V12c0 5.2 3.6 9.9 9 12 5.4-2.1 9-6.8 9-12V6.5L12 2zm-1 14-4-4 1.4-1.4L11 13.2l5.6-5.6L18 9l-7 7z"/>
              </svg>
              {{ warranty_text }}
            </div>
            {% if current_variant and current_variant.inventory_management == 'shopify' and current_variant.inventory_quantity > 0 %}
              {%- assign qty = current_variant.inventory_quantity -%}
              <div class="mg-badge--stock">{% if qty == 1 %}Queda 1 unidad{% else %}Quedan {{ qty }} unidades{% endif %}</div>
            {% endif %}
          {% endif %}
        </li>
      {%- endif -%}

      {%- for media in product.media -%}
        {% if media_position >= limit or media_position >= 1 and section.settings.hide_variants and variant_images contains media.src %}{% continue %}{% endif %}
        {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
          <li
            id="Slide-{{ section.id }}-{{ media.id }}"
            class="product__media-item grid__item slider__slide
            {% if single_media_visible %} product__media-item--single{% endif %}
            {% if product.selected_or_first_available_variant.featured_media == nil and forloop.index == 1 %} is-active{% endif %}
            {% if media.media_type != 'image' %} product__media-item--full{% endif %}
            {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
            data-media-id="{{ section.id }}-{{ media.id }}"
          >
            {%- liquid
              assign media_position = media_position | default: 0 | plus: 1
              assign lazy_load = false
              if media_position > 1
                assign lazy_load = true
              endif
            -%}

            {% render 'product-thumbnail',
              media: media,
              media_count: media_count,
              position: media_position,
              desktop_layout: section.settings.gallery_layout,
              mobile_layout: section.settings.mobile_thumbnails,
              loop: section.settings.enable_video_looping,
              modal_id: section.id,
              xr_button: true,
              media_width: media_width,
              media_fit: section.settings.media_fit,
              constrain_to_viewport: section.settings.constrain_to_viewport,
              lazy_load: lazy_load
            %}

            {% if media.media_type == 'image' %}
              <div class="mg-badge--warranty">
                <svg class="ico" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2 3 6.5V12c0 5.2 3.6 9.9 9 12 5.4-2.1 9-6.8 9-12V6.5L12 2zm-1 14-4-4 1.4-1.4L11 13.2l5.6-5.6L18 9l-7 7z"/>
                </svg>
                {{ warranty_text }}
              </div>
              {% if current_variant and current_variant.inventory_management == 'shopify' and current_variant.inventory_quantity > 0 %}
                {%- assign qty = current_variant.inventory_quantity -%}
                <div class="mg-badge--stock">{% if qty == 1 %}Queda 1 unidad{% else %}Quedan {{ qty }} unidades{% endif %}</div>
              {% endif %}
            {% endif %}
          </li>
        {%- endunless -%}
      {%- endfor -%}
    </ul>

    <div class="slider-buttons quick-add-hidden{% if hide_mobile_slider %} small-hide{% endif %}">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
        aria-controls="Slider-Gallery-{{ section.id }}"
        disabled
      >
        <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
      </button>

      <div class="slider-counter caption">
        <span class="slider-counter--current">1</span>
        <span aria-hidden="true"> / </span>
        <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
        <span class="slider-counter--total">{{ media_count }}</span>
      </div>

      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'general.slider.next_slide' | t }}"
        aria-controls="Slider-Gallery-{{ section.id }}"
      >
        <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
      </button>
    </div>

    <!-- ===== Navegación segura: flechas + sincronización con miniaturas ===== -->
    <script>
    (function(){
      function init(){
        const root   = document.getElementById('MediaGallery-{{ section.id }}');
        if (!root) return;
        const viewer = root.querySelector('#GalleryViewer-{{ section.id }}');
        const track  = root.querySelector('#Slider-Gallery-{{ section.id }}');
        const prev   = viewer?.querySelector('.slider-button--prev');
        theNext = viewer?.querySelector('.slider-button--next'); // prevent accidental var hoisting
        const next   = viewer?.querySelector('.slider-button--next');
        if (!viewer || !track || !prev || !next) return;

        const thumbsList = root.querySelector('#Slider-Thumbnails-{{ section.id }}');

        const slides = () => Array.from(track.querySelectorAll('.slider__slide'));
        const thumbButtons = () => thumbsList ? Array.from(thumbsList.querySelectorAll('button.thumbnail')) : [];
        const cc = viewer.querySelector('.slider-counter--current');
        const ct = viewer.querySelector('.slider-counter--total');
        const clamp = (n,a,b)=>Math.max(a,Math.min(b,n));

        function visibleIndex(){
          const tr = track.getBoundingClientRect();
          let bestI = 0, best = Infinity;
          slides().forEach((el,i)=>{
            const r = el.getBoundingClientRect();
            const d = Math.abs(r.left - tr.left);
            if (d < best){ best = d; bestI = i; }
          });
          return bestI;
        }

        function updateUI(i){
          const total = slides().length;
          if (cc) cc.textContent = String(i + 1);
          if (ct) ct.textContent = String(total);
          prev.disabled = i <= 0;
          next.disabled = i >= total - 1;
        }

        function clickThumbFor(i){
          if (!thumbsList) return false;
          const s = slides()[i];
          if (!s) return false;
          const mediaId = s.getAttribute('data-media-id');
          const li  = thumbsList.querySelector(`[data-target="${mediaId}"]`);
          const btn = li && li.querySelector('button.thumbnail');
          if (!btn) return false;
          btn.click(); // Dawn hace el cambio y marca aria-current
          li.scrollIntoView({ behavior:'smooth', inline:'center', block:'nearest' });
          setTimeout(()=>updateUI(i), 50);
          return true;
        }

        function goTo(i){
          const total = slides().length;
          i = clamp(i, 0, total - 1);
          // Si hay miniaturas, usamos click real para sincronizar todo
          if (clickThumbFor(i)) return;
          // Sin miniaturas: fallback por scroll
          const s = slides()[i];
          if (!s) return;
          s.scrollIntoView({ behavior:'smooth', inline:'start', block:'nearest' });
          setTimeout(()=>updateUI(i), 50);
        }

        // Botones
        prev.addEventListener('click', e => { e.preventDefault(); goTo(visibleIndex() - 1); });
        next.addEventListener('click', e => { e.preventDefault(); goTo(visibleIndex() + 1); });

        // Mantener contador/disabled sincronizados
        let t;
        const onSync = () => updateUI(visibleIndex());
        track.addEventListener('scroll', () => { clearTimeout(t); t = setTimeout(onSync, 80); }, { passive:true });
        window.addEventListener('resize', onSync);

        // Al hacer click en miniaturas, refrescamos estado tras el cambio
        if (thumbsList){
          thumbsList.addEventListener('click', e => {
            if (!e.target.closest('button.thumbnail')) return;
            setTimeout(onSync, 0);
          });
        }

        // Init
        updateUI(visibleIndex());
      }

      if (document.readyState === 'loading'){
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }
    })();
    </script>
  </slider-component>

  {%- if first_3d_model -%}
    <button
      class="button button--full-width product__xr-button"
      type="button"
      aria-label="{{ 'products.product.xr_button_label' | t }}"
