{% comment %}
  Renders a product media gallery. Should be used with 'media-gallery.js'
  Also see 'product-media-modal'
{% endcomment %}

{%- liquid
  if section.settings.hide_variants and variant_images.size == product.media.size
    assign single_media_visible = true
  endif

  if limit == 1
    assign single_media_visible = true
  endif

  assign media_count = product.media.size
  if section.settings.hide_variants and media_count > 1 and variant_images.size > 0
    assign media_count = media_count | minus: variant_images.size | plus: 1
  endif

  if media_count == 1 or single_media_visible
    assign single_media_visible_mobile = true
  endif

  assign hide_mobile_slider = false
  if media_count == 0
    assign hide_mobile_slider = true
  elsif single_media_visible_mobile
    assign hide_mobile_slider = true
  elsif section.settings.mobile_thumbnails == 'show'
    assign hide_mobile_slider = true
  elsif section.settings.mobile_thumbnails == 'columns' and media_count < 3
    assign hide_mobile_slider = true
  endif

  if section.settings.media_size == 'large'
    assign media_width = 0.65
  elsif section.settings.media_size == 'medium'
    assign media_width = 0.55
  elsif section.settings.media_size == 'small'
    assign media_width = 0.45
  endif
-%}

{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- assign warranty_text = 'Garantía de 1 año' -%}

<style>
  /* Contexto para badges */
  #MediaGallery-{{ section.id }} .product__media-item { position: relative; }

  /* Badge verde de garantía */
  #MediaGallery-{{ section.id }} .mg-badge--warranty {
    position:absolute; right:14px; bottom:14px; z-index:4;
    display:inline-flex; align-items:center; gap:8px;
    padding:10px 14px; border-radius:5px; font-weight:800; font-size:14px;
    color:#01b569; background:#c7f8e3; pointer-events:none;
  }
  #MediaGallery-{{ section.id }} .mg-badge--warranty .ico { width:18px; height:18px; display:inline-block; fill:currentColor; }

  /* Badge stock */
  #MediaGallery-{{ section.id }} .mg-badge--stock {
    position:absolute; right:14px; top:14px; z-index:4;
    padding:10px 14px; border-radius:5px; font-weight:400; font-size:14px;
    color:#f08932; background:rgba(247,218,194,.8); pointer-events:none;
  }

  @media (max-width:749px){
    #MediaGallery-{{ section.id }} .mg-badge--warranty { right:12px; bottom:12px; font-size:14px; }
    #MediaGallery-{{ section.id }} .mg-badge--warranty .ico { width:16px; height:16px; }
    #MediaGallery-{{ section.id }} .mg-badge--stock { right:12px; top:12px; font-size:13px; padding:8px 12px; }
  }
</style>

<media-gallery
