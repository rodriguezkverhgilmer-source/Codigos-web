                          {% when '16/9' %}{% assign pad = '56.25%' %}
                          {% else %}{% assign pad = '133.33%' %}
                        {% endcase %}

                        {% if block.type == 'promo_video' %}
                          <div class="swiper-slide m:column" {{ block.shopify_attributes }}>
                            <div class="m-product-card m-promo-video-card{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}">
                              <!-- vertical: añadimos clase --vertical para la regla móvil -->
