                                {% if block.settings.title != blank %}<h3 class="m-promo-video-card__title">{{ block.settings.title }}</h3>{% endif %}
                                {% if block.settings.subtitle != blank %}<p class="m-promo-video-card__subtitle">{{ block.settings.subtitle }}</p>{% endif %}
                                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                                  <a href="{{ block.settings.button_link }}" class="m-promo-video-card__btn">{{ block.settings.button_label }}</a>
                                {% endif %}
                              </div>
                            </div>
                          </div>
                        {% endif %}

                        {% if block.type == 'promo_video_wide' %}
                          {% assign span = block.settings.span_desktop | default: 2 %}
                          {% if span > items_per_row %}{% assign span = items_per_row %}{% endif %}
                          <div class="swiper-slide m:column {% unless enable_slider %}m-promo-video-card--wide-wrapper m-promo-video-card--span-{{ span }}{% endunless %}" {{ block.shopify_attributes }}>
                            <div class="m-product-card m-promo-video-card{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}">
                              <div class="m-promo-video-card__media" style="{% if enable_slider %}padding-top: {{ pad }};{% else %}padding-top: calc({{ pad }} / {{ span }});{% endif %}">
                                {% if block.settings.video != blank %}
                                  {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, controls: false }}
                                {% elsif block.settings.video_url != blank %}
                                  <video autoplay muted loop playsinline preload="metadata">
