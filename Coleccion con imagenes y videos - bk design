    border-radius: 999px; background: #fff; color: #111; text-decoration: none;
    font-size: 14px; line-height: 20px;
  }

  /* Desktop: WIDE ocupa 2 o 3 columnas cuando NO hay slider */
  #m-section--{{ section.id }} .m-promo-video-card--wide-wrapper{ width: 100%; }
  @media (min-width: 1024px){
    #m-section--{{ section.id }} .m-promo-video-card--span-2{ grid-column: span 2 / span 2; }
    #m-section--{{ section.id }} .m-promo-video-card--span-3{ grid-column: span 3 / span 3; }
  }

  /* === Altura exacta en móvil para el video vertical (igual a la card) === */
  #m-section--{{ section.id }}{
    {% assign _ratio = section.settings.pcard_image_ratio | default: '3/4' %}
    {% assign _pt = '133.33%' %}
    {% case _ratio %}
      {% when '1/1' %}{% assign _pt = '100%' %}
      {% when '3/4' %}{% assign _pt = '133.33%' %}
      {% when '4/3' %}{% assign _pt = '75%' %}
      {% when '16/9' %}{% assign _pt = '56.25%' %}
    {% endcase %}
    --m-card-pt: {{ _pt }};
  }

  /* Mobile rules solicitadas */
  @media (max-width: 767px){
    /* Vertical = misma altura que la product card */
    #m-section--{{ section.id }} .m-promo-video-card__media--vertical{
      padding-top: var(--m-card-pt) !important;
    }

    /* Horizontal = ancho completo */
    #m-section--{{ section.id }} .m-promo-video-card--wide-wrapper{ grid-column: 1 / -1; }
    #m-section--{{ section.id }} .m-mixed-layout--mobile-scroll .m-promo-video-card--wide-wrapper{ min-width: 100%; }
  }
</style>

{%- if current_collection != blank -%}
  {%- paginate current_collection.products by product_to_show -%}
    {%- liquid
      if paginate.pages < max_pages
        assign max_pages = paginate.pages
      endif
    -%}
    <section id="m-section--{{ section.id }}" class="m-section m-featured-collection-section">
      <m-featured-collection
