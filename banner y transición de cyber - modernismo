cyber-triple-banner.liquid

{% comment %} 
  Cyber – Triple Banner (Impact 6.11.1)
  - Desktop: izquierda más baja; centro + derecha pegadas; CTA sobre imagen central
  - Mobile: oculta 3ª imagen; CTA centrado sobre la imagen central
  - Control específico del ESPACIO SUPERIOR del título en mobile
  - Sin padding/margen vertical externos; fondo negro
{% endcomment %}

<section
  class="cybertriple-section color-scheme-{{ section.settings.color_scheme }}"
  style="
    --cyber-height: {% if section.settings.full_screen %}100vh{% else %}{{ section.settings.section_height | default: 460 }}px{% endif %};
    --cyber-left-offset: {{ section.settings.left_offset | default: 32 }}px;
    --cyber-heading-top: var(--cyber-left-offset); /* desktop sigue a la izquierda */
    --cyber-right-raise: {{ section.settings.right_raise | default: 40 }}px;
    --cyber-group-gap: {{ section.settings.group_gap | default: 24 }}px;
    --cyber-heading-size: {{ section.settings.heading_size | default: 96 }}px;
    --cyber-heading-gap: {{ section.settings.heading_gap | default: 0 }}px;

    /* Mobile */
    --cta-mobile-bottom: {{ section.settings.cta_mobile_bottom | default: 80 }}px;
    --cyber-mobile-heading-size: {{ section.settings.heading_size_mobile | default: 56 }}px;
    --cyber-heading-top-mobile: {{ section.settings.heading_top_mobile | default: 12 }}px; /* <— NUEVO */
  "
>
  <div class="cybertriple-inner">
    {% if section.settings.heading != blank %}
      <h2 class="cybertriple-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% assign widths = "380,540,720,960,1200,1600,2000" | split: "," %}

    <div class="cybertriple-row">
      <!-- Izquierda (más baja) -->
      <div class="cybertriple-card cybertriple-card--left" style="margin-top: var(--cyber-left-offset);">
        {% if section.settings.image_left != blank %}
          <img
            srcset="{% for size in widths %}{{ section.settings.image_left | image_url: width: size }} {{ size }}w{% unless forloop.last %}, {% endunless %}{% endfor %}"
            src="{{ section.settings.image_left | image_url: width: 1200 }}"
            sizes="(max-width: 989px) 100vw, 33vw"
            alt="{{ section.settings.alt_left | escape }}"
            loading="lazy"
            class="cybertriple-img"
          >
        {% else %}
          <div class="cybertriple-placeholder"></div>
        {% endif %}
      </div>

      <!-- Grupo derecho: Centro + Derecha PEGADAS -->
      <div class="cybertriple-rightgroup">
        <div class="cybertriple-card cybertriple-card--center">
          {% if section.settings.image_center != blank %}
            <img
              srcset="{% for size in widths %}{{ section.settings.image_center | image_url: width: size }} {{ size }}w{% unless forloop.last %}, {% endunless %}{% endfor %}"
              src="{{ section.settings.image_center | image_url: width: 1600 }}"
              sizes="(max-width: 989px) 100vw, 34vw"
              alt="{{ section.settings.alt_center | escape }}"
              loading="lazy"
              class="cybertriple-img"
            >
          {% else %}
            <div class="cybertriple-placeholder"></div>
          {% endif %}

          {% if section.settings.button_label != blank %}
            <!-- CTA dentro de la tarjeta central (para superponer) -->
            <div class="cybertriple-cta">
              <a
                {% if section.settings.button_link != blank %}href="{{ section.settings.button_link }}"{% else %}role="button"{% endif %}
                class="cybertriple-button"
              >
                {{ section.settings.button_label }}
              </a>
            </div>
          {% endif %}
        </div>

        <div class="cybertriple-card cybertriple-card--right">
          {% if section.settings.image_right != blank %}
            <img
              srcset="{% for size in widths %}{{ section.settings.image_right | image_url: width: size }} {{ size }}w{% unless forloop.last %}, {% endunless %}{% endfor %}"
              src="{{ section.settings.image_right | image_url: width: 1200 }}"
              sizes="(max-width: 989px) 100vw, 33vw"
              alt="{{ section.settings.alt_right | escape }}"
              loading="lazy"
              class="cybertriple-img"
            >
          {% else %}
            <div class="cybertriple-placeholder"></div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Quitar padding/margen externos (Impact) */
    #shopify-section-{{ section.id }} { padding: 0 !important; margin: 0 !important; background: #000; }

    /* Contenedor full-bleed */
    .cybertriple-inner {
      position: relative;
      width: 100vw;
      margin-left: calc(50% - 50vw);
      margin-right: calc(50% - 50vw);
      padding: 0;
      min-height: var(--cyber-height);
      background: #000;
      overflow: hidden;
    }

    /* Título */
    .cybertriple-heading {
      position: relative;
      z-index: 2;
      margin: 0;
      margin-top: var(--cyber-heading-top); /* desktop */
      color: #fff;
      font-weight: 800;
      letter-spacing: -1px;
      font-size: var(--cyber-heading-size);
      line-height: var(--cyber-heading-size);
    }

    /* Fila principal (desktop) */
    .cybertriple-row {
      display: grid;
      grid-template-columns: 1fr 2fr;
      column-gap: var(--cyber-group-gap);
      align-items: end;
      padding-top: var(--cyber-heading-gap);
      padding-bottom: 0;
      min-height: calc(
        var(--cyber-height)
        - var(--cyber-heading-size)
        - var(--cyber-heading-top)
        - var(--cyber-heading-gap)
      );
    }

    .cybertriple-rightgroup { display: grid; grid-template-columns: 1.3fr 1fr; column-gap: 0; align-items: end; height: 100%; }

    .cybertriple-card { position: relative; height: 100%; overflow: hidden; background: #111; }
    .cybertriple-img  { width: 100%; height: 100%; display: block; object-fit: cover; }

    .cybertriple-card--left { height: calc(100% - var(--cyber-left-offset)); }
    .cybertriple-card--center,
    .cybertriple-card--right { height: calc(100% + var(--cyber-right-raise)); }

    /* CTA (desktop centrado) */
    .cybertriple-cta { position: absolute; left: 50%; transform: translateX(-50%); bottom: 20px; z-index: 3; pointer-events: none; }

    /* ====== COLORES DEL BOTÓN (actualizado) ====== */
    .cybertriple-button {
      pointer-events: auto;
      display: inline-block;
      padding: 14px 28px;
      background:#ff0000;  
      color: #FFF;           
      font-size: 14px;
      font-weight: 700;
      letter-spacing: .6px;
      text-transform: uppercase;
      text-decoration: none;
      border-radius: 4px;
      box-shadow: 0 4px 12px rgba(0,0,0,.25);
      transition: transform .15s ease, box-shadow .15s ease;
    }
    .cybertriple-button:hover { transform: translateY(-2px); box-shadow: 0 6px 16px rgba(0,0,0,.30); }
    .cybertriple-button:focus { outline: 2px solid #000; outline-offset: 2px; }

    /* ===== Mobile ===== */
    @media (max-width: 989px) {
      .cybertriple-inner { min-height: auto; }

      /* Tamaño y ESPACIO SUPERIOR del título en mobile (control nuevo) */
      .cybertriple-heading {
        font-size: var(--cyber-mobile-heading-size);
        line-height: var(--cyber-mobile-heading-size);
        margin-top: var(--cyber-heading-top-mobile); /* <— controla el hueco rojo */
      }

      /* 1 columna, sin la 3ª imagen */
      .cybertriple-row { grid-template-columns: 1fr; padding-top: 8px; min-height: auto; }
      .cybertriple-rightgroup { grid-template-columns: 1fr; }
      .cybertriple-card--right { display: none; }

      .cybertriple-card--left,
      .cybertriple-card--center { height: 260px; }

      /* CTA centrado sobre la imagen central */
      .cybertriple-cta { left: 50%; transform: translateX(-50%); bottom: var(--cta-mobile-bottom); }
    }
  </style>
</section>

