ob-banner-cyber-anim.liquid


{% comment %}
  OB Rot CSS — Impact 6.11.0 (solo DROP-IN, full-bleed)
  • 100% CSS, 1 mensaje visible por vez con cortes duros (steps).
  • Full width (100vw) con fondo negro de borde a borde.
  • Sin padding arriba/abajo. “/” opcional por bloque.
  • Opción para ocultar en móvil.
{% endcomment %}

{%- assign blocks_count = 0 -%}
{%- for b in section.blocks -%}{% if b.type == 'message' %}{%- assign blocks_count = blocks_count | plus: 1 -%}{% endif %}{%- endfor -%}

{%- comment -%}
  DEFAULTS ACTUALIZADOS:
  - "Flash|Sale" -> "la mejor oferta del|año"
  - "Hasta un|40% OFF" -> "Hasta un|50% OFF"
{%- endcomment -%}
{%- assign default_pairs = "aprovecha|YA,La mejor oferta del|año,solo por|pocas horas,Hasta un|50% OFF" | split: "," -%}

{%- if blocks_count > 0 -%}
  {%- assign has_blocks = true -%}
  {%- assign total_items = blocks_count -%}
{%- else -%}
  {%- assign has_blocks = false -%}
  {%- assign total_items = default_pairs.size -%}
{%- endif -%}

{%- assign interval = section.settings.interval_s -%}
{%- assign cycle = interval | times: total_items -%}
{%- assign stagger_ms = section.settings.word_stagger_ms -%}
{%- assign imp = '' -%}{% if section.settings.force_animate %}{%- assign imp = ' !important' -%}{% endif %}

<section class="ob-rot ob-rot--css" data-ob-id="{{ section.id }}"
  style="--bg: {{ section.settings.bg_color }}; --fg: {{ section.settings.fg_color }}; --h: {{ section.settings.ticker_height }}px; --hm: {{ section.settings.ticker_height_m }}px; --fs: {{ section.settings.fs_desktop }}px; --fsm: {{ section.settings.fs_mobile }}px; --drop: {{ section.settings.word_drop_px }}px;">
  <div class="ob-rot__ticker">
    <div class="ob-rot__stage">

      {%- if has_blocks -%}
        {%- assign i = 0 -%}
        {%- for block in section.blocks -%}{% if block.type == 'message' %}
          {%- assign slot_start_s = interval | times: i -%}
          <p class="ob-rot__msg ob-rot__msg--{{ i }}"
             style="animation: ob-window-{{ section.id }}-{{ i }} {{ cycle }}s steps(1,end) infinite both 0s{{ imp }};"
             {{ block.shopify_attributes }}>
            {%- if block.settings.slashes -%}<span class="ob-rot__slash">/</span>{%- endif -%}

            {%- assign printed = false -%}
            {%- assign w_i = 0 -%}

            {%- assign txt = block.settings.prefix | default: '' -%}
            {%- if txt != '' -%}{%- assign words = txt | split: ' ' -%}
              {%- for w in words -%}
                {%- if printed -%}<span class="ob-space"></span>{%- endif -%}
                {%- assign w_ms = stagger_ms | times: w_i -%}
                {%- assign w_s  = w_ms | divided_by: 1000.0 -%}
                {%- assign delay_s = slot_start_s | plus: w_s -%}
                <span class="ob-word" style="animation: ob-word-{{ section.id }} {{ cycle }}s linear infinite both {{ delay_s }}s{{ imp }};">{{ w }}</span>
                {%- assign printed = true -%}{%- assign w_i = w_i | plus: 1 -%}
              {%- endfor -%}
            {%- endif -%}

            {%- assign txt = block.settings.strong | default: '' -%}
            {%- if txt != '' -%}
              {%- if printed -%}<span class="ob-space"></span>{%- endif -%}
              {%- assign words = txt | split: ' ' -%}
              {%- for w in words -%}
                {%- if forloop.index0 > 0 -%}<span class="ob-space"></span>{%- endif -%}
                {%- assign w_ms = stagger_ms | times: w_i -%}
                {%- assign w_s  = w_ms | divided_by: 1000.0 -%}
                {%- assign delay_s = slot_start_s | plus: w_s -%}
                <span class="ob-word ob-word--strong" style="animation: ob-word-{{ section.id }} {{ cycle }}s linear infinite both {{ delay_s }}s{{ imp }};">{{ w }}</span>
                {%- assign w_i = w_i | plus: 1 -%}
              {%- endfor -%}
              {%- assign printed = true -%}
            {%- endif -%}

            {%- assign txt = block.settings.suffix | default: '' -%}
            {%- if txt != '' -%}
              {%- if printed -%}<span class="ob-space"></span>{%- endif -%}
              {%- assign words = txt | split: ' ' -%}
              {%- for w in words -%}
                {%- if forloop.index0 > 0 -%}<span class="ob-space"></span>{%- endif -%}
                {%- assign w_ms = stagger_ms | times: w_i -%}
                {%- assign w_s  = w_ms | divided_by: 1000.0 -%}
                {%- assign delay_s = slot_start_s | plus: w_s -%}
                <span class="ob-word" style="animation: ob-word-{{ section.id }} {{ cycle }}s linear infinite both {{ delay_s }}s{{ imp }};">{{ w }}</span>
                {%- assign w_i = w_i | plus: 1 -%}
              {%- endfor -%}
            {%- endif -%}

            {%- if block.settings.slashes -%}<span class="ob-rot__slash">/</span>{%- endif -%}
          </p>
          {%- assign i = i | plus: 1 -%}
        {% endif %}{%- endfor -%}

      {%- else -%}
        {%- for pair in default_pairs -%}
          {%- assign parts = pair | split: "|" -%}
          {%- assign i = forloop.index0 -%}
          {%- assign slot_start_s = interval | times: i -%}
          <p class="ob-rot__msg ob-rot__msg--{{ i }}"
             style="animation: ob-window-{{ section.id }}-{{ i }} {{ cycle }}s steps(1,end) infinite both 0s{{ imp }};">
            {%- if forloop.first -%}<span class="ob-rot__slash">/</span>{%- endif -%}

            {%- assign printed = false -%}
            {%- assign w_i = 0 -%}

            {%- assign words = parts[0] | split: ' ' -%}
            {%- for w in words -%}
              {%- if printed -%}<span class="ob-space"></span>{%- endif -%}
              {%- assign w_ms = stagger_ms | times: w_i -%}
              {%- assign w_s  = w_ms | divided_by: 1000.0 -%}
              {%- assign delay_s = slot_start_s | plus: w_s -%}
              <span class="ob-word" style="animation: ob-word-{{ section.id }} {{ cycle }}s linear infinite both {{ delay_s }}s{{ imp }};">{{ w }}</span>
              {%- assign printed = true -%}{%- assign w_i = w_i | plus: 1 -%}
            {%- endfor -%}

            {%- if parts[1] != blank -%}
              <span class="ob-space"></span>
              {%- assign words = parts[1] | split: ' ' -%}
              {%- for w in words -%}
                {%- if forloop.index0 > 0 -%}<span class="ob-space"></span>{%- endif -%}
                {%- assign w_ms = stagger_ms | times: w_i -%}
                {%- assign w_s  = w_ms | divided_by: 1000.0 -%}
                {%- assign delay_s = slot_start_s | plus: w_s -%}
                <span class="ob-word ob-word--strong" style="animation: ob-word-{{ section.id }} {{ cycle }}s linear infinite both {{ delay_s }}s{{ imp }};">{{ w }}</span>
                {%- assign w_i = w_i | plus: 1 -%}
              {%- endfor -%}
            {%- endif -%}

            {%- if forloop.first -%}<span class="ob-rot__slash">/</span>{%- endif -%}
          </p>
        {%- endfor -%}
      {%- endif -%}

    </div>
  </div>

  <style>
    /* Quita padding/márgenes del wrapper del tema para esta sección */
    #shopify-section-{{ section.id }}{ padding-top:0 !important; padding-bottom:0 !important; margin:0 !important; }

    /* FULL-BLEED */
    section.ob-rot[data-ob-id="{{ section.id }}"]{
      width:100vw; max-width:100vw;
      position:relative; left:50%; right:50%;
      margin-left:-50vw; margin-right:-50vw;
      overflow:hidden;
      background: var(--bg);
    }

    /* Estructura interna */
    section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__ticker{ color:var(--fg); width:100%; }
    section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__stage{ position:relative; display:grid; place-items:center; height:var(--h); }

    /* 1 mensaje visible, cortes duros */
    section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__msg{
      position:absolute; inset:0;
      display:inline-flex; align-items:center; justify-content:center;
      padding:0 20px; margin:0; line-height:1; white-space:nowrap;
      font-size:var(--fs); font-weight:300; letter-spacing:-1px;
      pointer-events:none; opacity:0; visibility:hidden;
      will-change:opacity,visibility;
      background: transparent;
    }

    /* Palabras: caída simple */
    section.ob-rot[data-ob-id="{{ section.id }}"] .ob-word{
      display:inline-block; opacity:0; transform:translateY(calc(var(--drop) * -1));
      will-change:opacity,transform;
    }
    @keyframes ob-word-{{ section.id }}{
      0%   { opacity:0; transform:translateY(calc(var(--drop) * -1)); }
      8%   { opacity:1; transform:translateY(0); }
      100% { opacity:1; transform:translateY(0); }
    }

    /* Espacio fijo entre palabras */
    section.ob-rot[data-ob-id="{{ section.id }}"] .ob-space{
      display:inline-block; width:20px; min-width:12px; height:1em; line-height:1;
      font-size:0; letter-spacing:0 !important;
    }

    /* Ocultar en móvil (opcional vía setting) */
    {% if section.settings.hide_mobile %}
    @media (max-width:749px){
      #shopify-section-{{ section.id }}{ display:none !important; }
    }
    {% endif %}

    @media (max-width:749px){
      section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__stage{ height:var(--hm); }
      section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__msg{ font-size:var(--fsm); }
      section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__slash{ margin:0 12px; }
      section.ob-rot[data-ob-id="{{ section.id }}"] .ob-space{ width:8px; min-width:8px; }
    }

    /* Estética */
    section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__slash{ opacity:.9; margin:0 20px; }
    section.ob-rot[data-ob-id="{{ section.id }}"] .ob-word--strong{ font-weight:800; letter-spacing:-1.5px; }

    {% unless section.settings.force_animate %}
    @media (prefers-reduced-motion:reduce){
      section.ob-rot[data-ob-id="{{ section.id }}"] .ob-rot__msg{ opacity:1; visibility:visible; animation:none !important; }
      section.ob-rot[data-ob-id="{{ section.id }}"] .ob-word{ opacity:1; transform:none; animation:none !important; }
    }
    {% endunless %}
  </style>

  {%- comment -%} Ventanas por mensaje SIN overlap (cortes duros) {%- endcomment -%}
  <style>
    {%- assign slot = 100.0 | divided_by: total_items -%}
    {%- assign pad_in = slot | times: 6 | divided_by: 100.0 -%}
    {%- assign pad_out = slot | times: 6 | divided_by: 100.0 -%}
    {%- if has_blocks -%}
      {%- assign i = 0 -%}
      {%- for block in section.blocks -%}{% if block.type == 'message' -%}
        {%- assign start = slot | times: i | plus: pad_in -%}
        {%- assign end   = slot | times: i | plus: slot | minus: pad_out -%}
        {%- assign cut   = end | plus: 0.2 -%}
@keyframes ob-window-{{ section.id }}-{{ i }}{
  0%   { opacity:0; visibility:hidden; }
  {{ start }}% { opacity:1; visibility:visible; }
  {{ end }}%   { opacity:1; visibility:visible; }
  {{ cut }}%, 100% { opacity:0; visibility:hidden; }
}
        {%- assign i = i | plus: 1 -%}{% endif -%}{%- endfor -%}
    {%- else -%}
      {%- for pair in default_pairs -%}
        {%- assign i = forloop.index0 -%}
        {%- assign start = slot | times: i | plus: pad_in -%}
        {%- assign end   = slot | times: i | plus: slot | minus: pad_out -%}
        {%- assign cut   = end | plus: 0.2 -%}
@keyframes ob-window-{{ section.id }}-{{ i }}{
  0%   { opacity:0; visibility:hidden; }
  {{ start }}% { opacity:1; visibility:visible; }
  {{ end }}%   { opacity:1; visibility:visible; }
  {{ cut }}%, 100% { opacity:0; visibility:hidden; }
}
      {%- endfor -%}
    {%- endif -%}
  </style>
</section>

